<Window x:Class="BudgetControl.SalaryInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podaj swoją pensję" Height="250" Width="500">
    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2980b9" Offset="0"/>
                    <GradientStop Color="#2c3e50" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="20">
                <Border BorderBrush="#3498db" BorderThickness="2" CornerRadius="5" Background="#ecf0f1">
                    <StackPanel Margin="10">
                        <TextBlock Text="Podaj swoją miesięczną pensję" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

                        <TextBox x:Name="SalaryTextBox" Width="200" Margin="5"/>

                        <Button Content="Zatwierdź" Click="SubmitButton_Click" Width="150" Height="30" Margin="5" Background="#3498db" Foreground="White" BorderBrush="#2980b9" BorderThickness="1" FontFamily="Segoe UI" FontSize="14" Padding="10"  Style="{StaticResource RoundedButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
